{
  "name": "@as-pect/snapshot",
  "version": "3.0.0-alpha.3",
  "description": "A package for making snapshots easy to work with in as-pect",
  "main": "lib/index.js",
  "scripts": {
    "nearley": "nearleyc src/parser/grammar.ne -o src/parser/grammar.ts",
    "prettier": "prettier --write \"src/**/*.ts\" \"./__tests__/*.ts\" \"./__tests__/setup/*.ts\" \"./*.md\"",
    "rimraf": "rimraf lib/*",
    "test:ci": "jest",
    "test": "jest",
    "tsc:all": "run-s prettier rimraf nearley tsc:default tsc:amd",
    "tsc:amd": "tsc --outfile lib/as-pect.core.amd.js --module amd --declaration --declarationMap",
    "tsc:default": "tsc",
    "test:update-snapshots": "jest -u",
    "tsc": "run-s prettier rimraf nearley tsc:all"
  },
  "keywords": [
    "testing",
    "snapshots",
    "webassembly",
    "assemblyscript"
  ],
  "author": "Joshua <tenner.joshua@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/diff": "^4.0.2",
    "chalk": "^3.0.0",
    "diff": "^4.0.2",
    "nearley": "^2.19.1"
  },
  "devDependencies": {
    "@types/nearley": "^2.11.1",
    "prettier": "^1.19.1"
  }
}
